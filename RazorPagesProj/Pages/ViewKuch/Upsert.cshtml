@page
@model RazorPagesProj.Pages.ViewKuch.UpsertModel
@{
    ViewData["Title"] = "Upravit";
}

<h2 class="text-info">@(Model.Kucharka.Id!=0? "Upravit" : "Vytvořit") recept</h2><br />
<article>
    <div class="border container" style="padding:30px;">
        <form method="post">
            @*důležité pole, na které se zapomíná - nelze updatovat bez Id - aby se nová data uložila, potřebují mít i ID - toto pole je skryté*@
            @if (Model.Kucharka.Id!=0) { 
            <input type="hidden" asp-for="Kucharka.Id" />
            }
            <div classs="text-danger" asp-validation-summary="ModelOnly"></div>
            @*validace - na straně serveru*@
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Kucharka.Jmeno"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Kucharka.Jmeno" class="form-control" />
                </div>
                <span asp-validation-for="Kucharka.Jmeno" class="text-danger"></span>
                @*prostor pro chybovou hlášku - pod každým inputem*@
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Kucharka.Ingredience"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Kucharka.Ingredience" class="form-control" />
                </div>
                <span asp-validation-for="Kucharka.Ingredience" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Kucharka.Recept"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Kucharka.Recept" class="form-control" />
                </div>
                <span asp-validation-for="Kucharka.Recept" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-primary form-control">@(Model.Kucharka.Id!=0? "Upravit" : "Vytvořit") recept</button>
                </div>
                <div class="col-3">
                    <a asp-page="Index" class="btn btn-success form-control">Zpět</a>
                </div>
            </div>
        </form>
    </div>
</article>

@*validace na straně klienta:*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
